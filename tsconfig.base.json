{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "maxNodeModuleJsDepth": 10,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "es2018",
        "skipLibCheck": true,
        "types": ["webpack-env", "jest"]
    },
    "exclude": ["**/node_modules", "**/.*/"]
}
