{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "maxNodeModuleJsDepth": 10,
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "esnext",
        "useDefineForClassFields": false,
        "skipLibCheck": true,
        "types": ["webpack-env", "jest", "vitest/globals"],
        "baseUrl": ".",
        "paths": {
            "proton-mail/*": ["./applications/mail/src/app/*"],
            "proton-pass-extension/*": ["./applications/pass-extension/src/*"],
            "proton-pass-web/*": ["./applications/pass/src/*"],
            "proton-pass-desktop/*": ["./applications/pass-desktop/src/*"]
        }
    },
    "include": ["${configDir}/"],
    "exclude": ["**/node_modules/*", "**/dist/*", "**/.*/", "dangerfile.ts"]
}
