{
    "name": "@proton/meet",
    "description": "Proton-meet",
    "license": "GPL-3.0",
    "author": "",
    "main": "index.ts",
    "scripts": {
        "check-types": "tsc",
        "lint": "eslint --quiet",
        "pretty": "prettier --write  $(find src/app -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx')",
        "start": "cross-env TS_NODE_PROJECT=\"../../tsconfig.webpack.json\" proton-pack dev-server --appMode=standalone",
        "test": "TZ=UTC vitest",
        "test:ci": "TZ=UTC vitest run --coverage --coverage.provider=v8",
        "test:ui": "yarn test --ui",
        "test:watch": "yarn test --watch"
    },
    "dependencies": {
        "@proton/crypto": "workspace:packages/crypto",
        "@proton/shared": "workspace:packages/shared",
        "@types/react": "^18.3.24",
        "cross-env": "^7.0.3",
        "react": "^18.3.1",
        "ttag": "^1.8.12"
    },
    "devDependencies": {
        "@proton/eslint-config-proton": "workspace:packages/eslint-config-proton",
        "@proton/i18n": "workspace:packages/i18n",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^15.0.7",
        "@vitejs/plugin-react-swc": "^3.11.0",
        "@vitest/coverage-v8": "3.2.4",
        "@vitest/ui": "3.2.4",
        "eslint": "^9.35.0",
        "happy-dom": "^17.6.3",
        "prettier": "^3.6.2",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    }
}
