{
    "name": "@proton/storybook",
    "description": "",
    "license": "GPL-3.0",
    "sideEffects": false,
    "scripts": {
        "docker:build": "docker build -f Dockerfile -t storybook-atoms ../../",
        "docker:run": "docker run -it -p 3000:3000 -v .:/clients/packages/storybook --name storybook-atoms storybook-atoms:latest",
        "playwright:test": "playwright test --config=playwright.config.ts",
        "playwright:test:update": "yarn run playwright:test -u",
        "storybook:build": "storybook build",
        "storybook:build:serve": "http-server ./storybook-static --cors --port 3000 --silent",
        "storybook:build:wait": "wait-on http://localhost:3000",
        "storybook:dev": "storybook dev -p 6007",
        "storybook:test:visual": "yarn storybook:build:wait && yarn playwright:test",
        "storybook:test:visual:update": "yarn storybook:build:wait && yarn playwright:test:update"
    },
    "dependencies": {
        "@proton/atoms": "workspace:^",
        "@proton/i18n": "workspace:^",
        "@proton/icons": "workspace:^",
        "@proton/pack": "workspace:^",
        "@proton/shared": "workspace:^",
        "@proton/styles": "workspace:^",
        "http-server": "^14.1.1",
        "iconv-lite": "^0.6.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tinycolor2": "^1.6.0",
        "ttag": "^1.8.7",
        "wait-on": "^8.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.26.10",
        "@babel/plugin-transform-runtime": "^7.26.10",
        "@babel/preset-env": "^7.26.9",
        "@babel/preset-react": "^7.26.3",
        "@babel/preset-typescript": "^7.27.0",
        "@playwright/test": "^1.52.0",
        "@storybook/addon-essentials": "^8.6.12",
        "@storybook/addon-interactions": "^8.6.12",
        "@storybook/addon-links": "^8.6.12",
        "@storybook/addon-webpack5-compiler-babel": "^3.0.6",
        "@storybook/blocks": "^8.6.12",
        "@storybook/manager-api": "^8.6.12",
        "@storybook/react": "^8.6.12",
        "@storybook/react-webpack5": "^8.6.12",
        "@storybook/source-loader": "^8.6.12",
        "@storybook/test": "^8.6.12",
        "@storybook/theming": "^8.6.12",
        "@types/node": "^22.15.2",
        "@types/react": "^18.3.20",
        "@types/react-dom": "^18.3.6",
        "@types/tinycolor2": "^1.4.6",
        "babel-loader": "^10.0.0",
        "storybook": "^8.6.12",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "webpack": "^5.99.7"
    },
    "packageManager": "yarn@4.9.1"
}
