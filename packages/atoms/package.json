{
    "name": "@proton/atoms",
    "description": "",
    "license": "GPL-3.0",
    "author": "",
    "sideEffects": false,
    "main": "./src/index.ts",
    "scripts": {
        "check-types": "tsc",
        "create-atom": "ts-node -P create-atom/tsconfig.create-atom.json create-atom/index",
        "docker:build": "docker build -f Dockerfile -t storybook-atoms ../../",
        "docker:run": "docker run -it -p 3000:3000 -v .:/clients/packages/atoms --name storybook-atoms storybook-atoms:latest",
        "i18n:validate": "proton-i18n validate lint-functions",
        "lint": "eslint . --ext .js,.ts,.tsx --quiet",
        "playwright:test": "playwright test --config=playwright.config.ts",
        "playwright:test:update": "yarn run playwright:test -u",
        "pretty": "prettier --write $(find . -path ./node_modules -prune -o -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx')",
        "storybook:build": "storybook build --loglevel warn --quiet",
        "storybook:build:serve": "http-server ./storybook-static --cors --port 3000 --silent",
        "storybook:build:wait": "wait-on http://localhost:3000",
        "storybook:dev": "storybook dev -p 6006",
        "storybook:test:visual": "yarn storybook:build:wait && yarn playwright:test",
        "storybook:test:visual:update": "yarn storybook:build:wait && yarn playwright:test:update",
        "test": "jest",
        "test:ci": "jest --coverage --runInBand --ci",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@proton/colors": "workspace:^",
        "@proton/hooks": "workspace:^",
        "@proton/i18n": "workspace:^",
        "@proton/icons": "workspace:^",
        "@proton/pack": "workspace:^",
        "@proton/react-polymorphic-types": "workspace:^",
        "@proton/shared": "workspace:^",
        "@proton/styles": "workspace:^",
        "@proton/testing": "workspace:^",
        "@proton/utils": "workspace:^",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tinycolor2": "^1.6.0",
        "ttag": "^1.8.12"
    },
    "devDependencies": {
        "@babel/core": "^7.28.3",
        "@babel/preset-react": "^7.27.1",
        "@babel/preset-typescript": "^7.27.1",
        "@playwright/test": "^1.54.1",
        "@proton/eslint-config-proton": "workspace:^",
        "@proton/jest-env": "workspace:^",
        "@storybook/addon-essentials": "^8.6.14",
        "@storybook/addon-interactions": "^8.6.14",
        "@storybook/addon-links": "^8.6.14",
        "@storybook/addon-webpack5-compiler-babel": "^3.0.6",
        "@storybook/blocks": "^8.6.14",
        "@storybook/manager-api": "^8.6.14",
        "@storybook/react": "^8.6.14",
        "@storybook/react-webpack5": "^8.6.14",
        "@storybook/source-loader": "^8.6.14",
        "@storybook/theming": "^8.6.14",
        "@testing-library/jest-dom": "^6.7.0",
        "@testing-library/react": "^15.0.7",
        "@types/jest": "^29.5.14",
        "@types/mustache": "^4.2.6",
        "@types/node": "^22.17.1",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "@types/tinycolor2": "^1.4.6",
        "babel-loader": "^10.0.0",
        "chalk": "^4.1.2",
        "commander": "^12.1.0",
        "eslint": "^8.57.1",
        "eslint-plugin-storybook": "^0.12.0",
        "http-server": "^14.1.1",
        "jest": "^29.7.0",
        "mustache": "^4.2.0",
        "netlify-cli": "17.38.1",
        "prettier": "^3.6.2",
        "storybook": "^8.6.14",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "wait-on": "^8.0.4",
        "webpack": "^5.101.1"
    }
}
