{
    "name": "@proton/drive-store",
    "description": "Duplication of the Drive Store",
    "main": "index.ts",
    "scripts": {
        "check-types": "tsc",
        "copy": "sh -c 'src_path=\"$1\"; dest_path=$(echo \"$1\" | sed \"s|applications/drive/src/app|packages/drive-store|\"); mkdir -p $(dirname \"$dest_path\"); cp \"$src_path\" \"$dest_path\"' --",
        "lint": "eslint . --ext ts --quiet --cache",
        "prettier": "prettier",
        "sync": "node scripts/sync.mjs",
        "test": "jest",
        "test:ci": "jest --coverage --runInBand --ci",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@mattiasbuelens/web-streams-adapter": "0.1.0",
        "@noble/hashes": "^1.5.0",
        "@openpgp/web-stream-tools": "^0.0.13",
        "@proton/components": "workspace:^",
        "@proton/crypto": "workspace:^",
        "@proton/shared": "workspace:^",
        "@proton/styles": "workspace:^",
        "@proton/testing": "workspace:^",
        "@testing-library/react": "^15.0.7",
        "@testing-library/react-hooks": "^8.0.1",
        "client-zip": "^2.4.5",
        "exifreader": "^4.25.0",
        "mime-types": "^2.1.35",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^5.3.4",
        "react-test-renderer": "^18.3.1",
        "react-window": "^1.8.10",
        "ttag": "^1.8.7",
        "web-streams-polyfill": "^3.3.3"
    },
    "devDependencies": {
        "@proton/eslint-config-proton": "workspace:^",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^15.0.7",
        "@testing-library/react-hooks": "^8.0.1",
        "@types/jest": "^29.5.14",
        "@types/mime-types": "^2.1.4",
        "@types/react-window": "^1.8.8",
        "eslint": "^8.57.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-junit": "^16.0.0",
        "jest-when": "3.6.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "typescript": "^5.6.3"
    }
