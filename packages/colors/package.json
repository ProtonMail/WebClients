{
    "name": "@proton/colors",
    "version": "0.0.2",
    "description": "Package containing the logic for Proton's design system color computations",
    "scripts": {
        "build": "webpack-cli",
        "check-types": "tsc",
        "generate": "ts-node -P tsconfig.generate.json gen-themes-cli",
        "lint": "eslint . --ext ts --quiet --cache",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand --ci",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@types/node": "^22.14.0",
        "css-tree": "^2.3.1",
        "prettier": "^3.5.3",
        "tinycolor2": "^1.6.0"
    },
    "devDependencies": {
        "@proton/eslint-config-proton": "workspace:^",
        "@types/css-tree": "^2.3.10",
        "@types/jest": "^29.5.14",
        "@types/tinycolor2": "^1.4.6",
        "eslint": "^8.57.1",
        "jest": "^29.7.0",
        "ts-jest": "^29.3.1",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2",
        "webpack": "^5.98.0",
        "webpack-cli": "^6.0.1"
    }
}
