        "@types/jest": "^30.0.0",
        "@types/tinycolor2": "^1.4.6",
        "eslint": "^9.37.0",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.4",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "webpack": "^5.102.1",
        "webpack-cli": "^6.0.1"
