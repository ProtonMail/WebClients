        "@proton/i18n": "workspace:packages/i18n",
        "@types/jasmine": "^5.1.2",
        "eslint": "^8.53.0",
        "jasmine": "^5.1.0",
        "jasmine-core": "^5.1.1",
        "karma": "^6.4.2",
        "karma-chrome-launcher": "^3.2.0",
        "karma-jasmine": "^5.1.0",
        "karma-webpack": "^5.0.0",
        "playwright": "^1.39.0",
