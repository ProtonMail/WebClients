        "typescript": "^5.4.3"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/jest-when": "^3.5.5",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "sort-package-json": "^2.8.0"
    },
    "packageManager": "yarn@4.1.1",
    "engines": {
        "node": ">= 20.11.1"
