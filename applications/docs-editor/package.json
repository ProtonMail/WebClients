{
  "name": "proton-docs-editor",
  "description": "Editor for Proton Docs.",
  "main": "index.ts",
  "scripts": {
    "build:web": "cross-env NODE_ENV=production TS_NODE_PROJECT=\"../../tsconfig.webpack.json\" proton-pack build --appMode=sso",
    "check-types": "tsc",
    "i18n:extract:web": "proton-i18n extract",
    "i18n:upgrade": "proton-i18n extract --verbose && proton-i18n crowdin --verbose",
    "i18n:validate": "proton-i18n validate lint-functions",
    "i18n:validate:context:web": "proton-i18n validate",
    "postinstall": "proton-pack config",
    "lint": "eslint . --ext ts --quiet --cache",
    "lint:warning": "eslint src --ext .js,.ts,.tsx",
    "start": "cross-env TS_NODE_PROJECT=\"../../tsconfig.webpack.json\" proton-pack dev-server --appMode=standalone",
    "test": "jest",
    "test:ci": "jest --runInBand --ci",
    "test:watch": "jest --watch --coverage=false"
  },
  "dependencies": {
    "@lexical/clipboard": "0.20.0",
    "@lexical/code": "0.20.0",
    "@lexical/hashtag": "0.20.0",
    "@lexical/headless": "0.20.0",
    "@lexical/link": "0.20.0",
    "@lexical/list": "0.20.0",
    "@lexical/mark": "0.20.0",
    "@lexical/overflow": "0.20.0",
    "@lexical/plain-text": "0.20.0",
    "@lexical/react": "0.20.0",
    "@lexical/rich-text": "0.20.0",
    "@lexical/selection": "0.20.0",
    "@lexical/table": "0.20.0",
    "@lexical/utils": "0.20.0",
    "@lexical/yjs": "0.20.0",
    "@proton/atoms": "workspace:^",
    "@proton/components": "workspace:^",
    "@proton/crypto": "workspace:^",
    "@proton/docs-core": "workspace:^",
    "@proton/docs-shared": "workspace:^",
    "@proton/hooks": "workspace:^",
    "@proton/icons": "workspace:^",
    "@proton/pack": "workspace:^",
    "@proton/polyfill": "workspace:^",
    "@proton/shared": "workspace:^",
    "@proton/styles": "workspace:^",
    "@proton/utils": "workspace:^",
    "@react-pdf/renderer": "^4.0.0",
    "docx": "^8.5.0",
    "docx-preview-cjs": "0.3.7",
    "lexical": "0.20.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@proton/eslint-config-proton": "workspace:^",
    "@proton/i18n": "workspace:^",
    "@proton/jest-env": "workspace:^",
    "@proton/testing": "workspace:^",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-require-context": "^0.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.14",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "sass": "1.79.5",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  }
}
