{
  "name": "proton-docs-editor",
  "description": "Editor for Proton Docs.",
  "main": "index.ts",
  "scripts": {
    "build": "cross-env NODE_ENV=production TS_NODE_PROJECT=\"../../tsconfig.webpack.json\" proton-pack build --appMode=sso",
    "check-types": "tsc",
    "i18n:upgrade": "proton-i18n extract --verbose && proton-i18n crowdin --verbose",
    "i18n:validate": "proton-i18n validate lint-functions",
    "i18n:validate:context": "proton-i18n extract && proton-i18n validate",
    "postinstall": "proton-pack config",
    "lint": "eslint . --ext ts --quiet --cache",
    "lint:warning": "eslint src --ext .js,.ts,.tsx",
    "start": "cross-env TS_NODE_PROJECT=\"../../tsconfig.webpack.json\" proton-pack dev-server --appMode=standalone",
    "test": "jest",
    "test:ci": "jest --runInBand --ci",
    "test:watch": "jest --watch --coverage=false"
  },
  "dependencies": {
    "@lexical/clipboard": "0.16.0",
    "@lexical/code": "0.16.0",
    "@lexical/hashtag": "0.16.0",
    "@lexical/headless": "0.16.0",
    "@lexical/link": "0.16.0",
    "@lexical/list": "0.16.0",
    "@lexical/mark": "0.16.0",
    "@lexical/overflow": "0.16.0",
    "@lexical/plain-text": "0.16.0",
    "@lexical/react": "0.16.0",
    "@lexical/rich-text": "0.16.0",
    "@lexical/selection": "0.16.0",
    "@lexical/table": "0.16.0",
    "@lexical/utils": "0.16.0",
    "@lexical/yjs": "0.16.0",
    "@proton/components": "workspace:packages/components",
    "@proton/docs-shared": "workspace:packages/docs-shared",
    "@proton/pack": "workspace:packages/pack",
    "@proton/shared": "workspace:packages/shared",
    "docx": "^8.5.0",
    "docx-preview-cjs": "^0.3.0",
    "lexical": "0.16.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.6",
    "@proton/eslint-config-proton": "workspace:^",
    "@proton/i18n": "workspace:packages/i18n",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-require-context": "^0.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "sass": "^1.77.4",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  }
}
