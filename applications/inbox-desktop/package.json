{
    "name": "proton-inbox-desktop",
    "version": "1.9.0",
    "description": "Proton official desktop application for Proton Mail and Proton Calendar",
    "license": "GPL-3.0",
    "author": {
        "name": "Proton",
        "email": "contact@protonmail.com",
        "url": "https://proton.me"
    },
    "main": ".webpack/main",
    "scripts": {
        "check": "yarn run check:format && yarn run check:lint && yarn run check:types",
        "check-types": "yarn run check:types",
        "check:format": "prettier . --check",
        "check:lint": "eslint --quiet",
        "check:negativity": "electronegativity -i ./src",
        "check:types": "tsc --noEmit",
        "create-uninstaller": "appify ./src/macos/uninstall.sh './src/macos/Proton Mail Uninstaller.app' ./assets/icons/uninstaller.png",
        "format": "prettier . --write --list-different",
        "i18n:extract:web": "node tasks/extract-translations.mjs",
        "i18n:validate": "proton-i18n validate lint-functions",
        "i18n:validate:context:web": "proton-i18n validate",
        "lint": "yarn run check:lint",
        "make": "electron-forge make",
        "make:beta": "cross-env RELEASE=beta electron-forge make",
        "negativity": "electronegativity -i ./src",
        "package": "electron-forge package",
        "start": "electron-forge start",
        "test": "jest --runInBand"
    },
    "config": {
        "appBundleId": "ch.protonmail.desktop",
        "appUserModelId": "com.squirrel.proton_mail.ProtonMail",
        "copyright": "Copyright (c) 2025, Proton AG <contact@protonmail.com>",
        "githubRepo": "inbox-desktop",
        "githubUser": "ProtonMail",
        "updateInterval": 3600000
    },
    "dependencies": {
        "@proton/shared": "workspace:^",
        "@types/minimist": "^1.2.5",
        "electron-log": "^5.4.3",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^8.2.0",
        "execa": "^8.0.1",
        "lodash": "^4.17.21",
        "minimist": "^1.2.8",
        "ttag": "^1.8.12",
        "ttag-cli": "^1.11.2",
        "update-electron-app": "^3.1.1",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@doyensec/electronegativity": "^1.10.3",
        "@electron-forge/cli": "^7.3.0",
        "@electron-forge/maker-deb": "^7.3.0",
        "@electron-forge/maker-dmg": "^7.3.0",
        "@electron-forge/maker-rpm": "^7.3.0",
        "@electron-forge/maker-squirrel": "^7.3.0",
        "@electron-forge/maker-zip": "^7.3.0",
        "@electron-forge/plugin-auto-unpack-natives": "^7.3.0",
        "@electron-forge/plugin-fuses": "^7.3.0",
        "@electron-forge/plugin-webpack": "^7.3.0",
        "@electron-forge/publisher-github": "^7.3.0",
        "@electron/fuses": "^1.7.0",
        "@proton/i18n": "workspace:^",
        "@proton/types": "workspace:^",
        "@sentry/electron": "^5.12.0",
        "@types/jest": "^30.0.0",
        "@types/lodash": "^4.17.20",
        "@types/node": "^22.18.8",
        "@vercel/webpack-asset-relocator-loader": "1.7.3",
        "cross-env": "^10.1.0",
        "css-loader": "^7.1.2",
        "dotenv": "^16.6.1",
        "electron": "35.7.5",
        "eslint": "^9.37.0",
        "eslint-plugin-import": "^2.32.0",
        "fork-ts-checker-webpack-plugin": "^9.1.0",
        "jest": "^30.2.0",
        "mac-appify": "^2019.4.13",
        "node-loader": "^2.1.0",
        "prettier": "3.6.2",
        "style-loader": "^4.0.0",
        "ts-jest": "^29.4.4",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.46.0"
    },
    "icon": "assets/icons/icon.png",
    "productName": "Proton Mail"
}
