{
    "name": "proton-pass-desktop",
    "version": "1.34.1",
    "description": "Proton Pass desktop application",
    "license": "GPL-3.0",
    "author": "Proton AG",
    "main": ".webpack/main",
    "scripts": {
        "build:desktop": "cross-env-shell NODE_ENV=production 'yarn run build:native && electron-forge package'",
        "build:desktop:dev": "cross-env-shell NODE_ENV=production API_ENV=proton.black 'yarn run build:native && electron-forge package'",
        "build:mas": "cross-env-shell NODE_ENV=production SKIP_CODESIGN=1 SKIP_NOTARIZE=1 CSC_LINK=mas/app.p12 CSC_KEY_PASSWORD=$APP_CERT_PASSWORD CSC_INSTALLER_LINK=mas/installer.p12 CSC_INSTALLER_KEY_PASSWORD=$INSTALLER_CERT_PASSWORD 'yarn run build:native && electron-forge package && cp -r .webpack/*/* .webpack/ && rm -rf .webpack/arm64 && electron-builder --config electron-builder.config.js'",
        "build:native": "cd native && yarn build:multi",
        "check-types": "tsc",
        "clean:build:artifacts": "rm -rf dist && rm -rf out && rm -rf .webpack",
        "i18n:extract:desktop": "proton-i18n extract",
        "i18n:getlatest": "proton-i18n upgrade",
        "i18n:upgrade": "proton-i18n extract --verbose && proton-i18n crowdin -u --verbose",
        "i18n:validate": "proton-i18n validate lint-functions",
        "i18n:validate:context:desktop": "proton-i18n validate",
        "lint": "eslint --quiet",
        "make": "electron-forge make --skip-package",
        "pretty": "prettier --write  $(find src/app -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx')",
        "start": "cross-env-shell NODE_ENV=development API_ENV=proton.black 'electron-forge start'",
        "test": "jest",
        "test:ci": "jest --coverage --runInBand --ci --passWithNoTests",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@proton/icons": "workspace:^",
        "electron-log": "^5.4.3",
        "electron-store": "^8.2.0",
        "proton-pass-web": "workspace:applications/pass"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.5.0",
        "@electron-forge/maker-deb": "^7.5.0",
        "@electron-forge/maker-dmg": "^7.5.0",
        "@electron-forge/maker-rpm": "^7.5.0",
        "@electron-forge/maker-squirrel": "^7.5.0",
        "@electron-forge/maker-zip": "^7.5.0",
        "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
        "@electron-forge/plugin-fuses": "^7.5.0",
        "@electron-forge/plugin-webpack": "^7.5.0",
        "@electron-forge/shared-types": "^7.5.0",
        "@electron/fuses": "^1.8.0",
        "@proton/eslint-config-proton": "workspace:^",
        "@proton/i18n": "workspace:^",
        "@proton/pack": "workspace:^",
        "@proton/types": "workspace:^",
        "@vercel/webpack-asset-relocator-loader": "1.7.3",
        "cross-env": "^10.1.0",
        "electron": "39.3.0",
        "electron-builder": "26.4.0",
        "eslint": "^9.39.2",
        "jest": "^30.2.0",
        "node-loader": "^2.1.0",
        "prettier": "^3.8.1",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "webpack": "^5.104.1"
    },
    "productName": "Proton Pass"
}
