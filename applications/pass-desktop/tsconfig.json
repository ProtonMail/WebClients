{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": ["WebWorker", "DOM", "DOM.Iterable", "ESNext", "DOM.AsyncIterable"],
        "types": ["@proton/types", "webpack-env", "jest", "chrome", "./globals.d.ts"]
    },
    "ts-node": {
        "compilerOptions": {
            "allowJs": true,
            "esModuleInterop": true,
            "module": "commonjs",
            "moduleResolution": "node",
            "resolveJsonModule": true,
            "skipLibCheck": true,
            "target": "ES6"
        }
    }
}
