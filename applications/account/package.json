{
    "name": "proton-account",
    "description": "React web application to manage Proton accounts",
    "keywords": [],
    "license": "GPL-3.0",
    "author": "",
    "main": "index.js",
    "scripts": {
        "build:web": "cross-env NODE_ENV=production TS_NODE_PROJECT=\"../../tsconfig.webpack.json\" proton-pack build --appMode=sso --logical",
        "check-types": "tsc",
        "i18n:extract:web": "proton-i18n extract",
        "i18n:upgrade": "proton-i18n extract --verbose && proton-i18n crowdin --verbose",
        "i18n:validate": "proton-i18n validate lint-functions",
        "i18n:validate:context:web": "proton-i18n validate",
        "lint": "eslint --quiet",
        "pretty": "prettier --write  $(find src/app -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx')",
        "start": "cross-env TS_NODE_PROJECT=\"../../tsconfig.webpack.json\" proton-pack dev-server --appMode=standalone --logical",
        "test": "jest",
        "test:ci": "jest --coverage --runInBand --ci",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@proton/account": "workspace:^",
        "@proton/activation": "workspace:^",
        "@proton/atoms": "workspace:^",
        "@proton/calendar": "workspace:^",
        "@proton/colors": "workspace:^",
        "@proton/components": "workspace:^",
        "@proton/cross-storage": "workspace:^",
        "@proton/features": "workspace:^",
        "@proton/hooks": "workspace:^",
        "@proton/icons": "workspace:^",
        "@proton/key-transparency": "workspace:^",
        "@proton/mail": "workspace:^",
        "@proton/metrics": "workspace:^",
        "@proton/pack": "workspace:^",
        "@proton/pass": "workspace:^",
        "@proton/payments": "workspace:^",
        "@proton/polyfill": "workspace:^",
        "@proton/react-polymorphic-types": "workspace:^",
        "@proton/react-redux-store": "workspace:^",
        "@proton/recovery-kit": "workspace:^",
        "@proton/redux-shared-store": "workspace:^",
        "@proton/redux-shared-store-types": "workspace:^",
        "@proton/redux-utilities": "workspace:^",
        "@proton/shared": "workspace:^",
        "@proton/styles": "workspace:^",
        "@proton/unleash": "workspace:^",
        "@proton/utils": "workspace:^",
        "@proton/wallet": "workspace:^",
        "@reduxjs/toolkit": "^2.11.2",
        "@types/react": "^18.3.27",
        "@types/react-dom": "^18.3.7",
        "@types/react-router-dom": "^5.3.3",
        "date-fns": "^2.30.0",
        "history": "^4.10.1",
        "lodash": "^4.17.23",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-redux": "^9.2.0",
        "react-router-dom": "^5.3.4",
        "ttag": "^1.8.12"
    },
    "devDependencies": {
        "@proton/eslint-config-proton": "workspace:^",
        "@proton/i18n": "workspace:^",
        "@proton/jest-env": "workspace:^",
        "@proton/testing": "workspace:^",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^15.0.7",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^30.0.0",
        "@webgpu/types": "^0.1.69",
        "core-js": "^3.48.0",
        "cross-env": "^10.1.0",
        "eslint": "^9.39.2",
        "html-webpack-plugin": "^5.6.6",
        "jest": "^30.2.0",
        "jest-junit": "^16.0.0",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3",
        "webpack-dev-server": "^5.2.3"
    }
}
