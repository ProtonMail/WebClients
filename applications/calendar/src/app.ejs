<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-dns-prefetch-control" content="off" />
    <base href="/" />

    <link rel="canonical" href="<%= url %>">

    <title><%= appName %></title>
    <meta name="description" content="<%= appDescription %>">

    <meta property="og:title" content="<%= appName %>">
    <meta property="og:description" content="<%= appDescription %>">
    <meta property="og:url" content="<%= url %>">
    <meta property="og:type" content="website">
    <meta property="og:image" content="<%= url %>assets/proton-og-image.png">
    <meta property="og:image:alt" content="The shiny <%= appName %> logo">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@ProtonMail">
    <meta name="twitter:title" content="<%= appName %>">
    <meta name="twitter:description" content="<%= appDescription %>">
    <meta name="twitter:image" content="<%= url %>assets/proton-og-image.png">
    <meta name="twitter:image:alt" content="The shiny <%= appName %> logo">

    <meta name="google-play-app" content="app-id=me.proton.android.calendar">

    <meta property="og:locale" content="en_US">
    <% locales.filter(function(locale) { return locale !== 'en_US'}).forEach(function(locale){ %>
        <meta property="og:locale:alternate" content="<%= locale %>">
    <% }); %>

    <meta name="google" content="notranslate">

    <link rel="icon" href="/assets/favicon.ico" sizes="any">
    <link rel="icon" href="<%= require('./favicon.svg') %>" type="image/svg+xml">
</head>
<body>
    <div class="app-root"></div>
    <div class="app-root-loader"></div>
    <noscript class="app-noscript">
        <%= appName %> requires Javascript. Enable Javascript and reload this page to continue.
    </noscript>
</body>
</html>
