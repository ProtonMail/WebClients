{
    "name": "Proton Pass: Free Password Manager",
    "description": "Free and fully encrypted password manager to keep your logins and passwords safe.",
    "version": "0.15.2",
    "manifest_version": 3,
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["content.js"],
            "css": ["styles/content.css"],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "alarms",
        "privacy",
        "scripting",
        "storage",
        "unlimitedStorage",
        "webRequest",
        "webRequestBlocking"
    ],
    "host_permissions": ["https://*/*", "http://*/*", "wss://*/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/assets/protonpass-icon-16.png",
            "32": "/assets/protonpass-icon-32.png",
            "48": "/assets/protonpass-icon-48.png",
            "128": "/assets/protonpass-icon-128.png"
        }
    },
    "icons": {
        "16": "/assets/protonpass-icon-16.png",
        "32": "/assets/protonpass-icon-32.png",
        "48": "/assets/protonpass-icon-48.png",
        "128": "/assets/protonpass-icon-128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "dropdown.html",
                "notification.html",
                "assets/*.png",
                "assets/*.svg",
                "assets/*.woff",
                "assets/*.woff2"
            ],
            "matches": ["https://*/*"]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "78272b6fa58f4a1abaac99321d503a20@proton.me"
        }
    }
}
