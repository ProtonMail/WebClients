{
    "name": "proton-pass-extension",
    "description": "Password Manager Browser Extension",
    "license": "GPL-3.0",
    "scripts": {
        "build": "cross-env NODE_ENV=production BUILD_TARGET=${BUILD_TARGET:-chrome} sh -c 'yarn clean && yarn run config && yarn build:extension'",
        "build:all": "./tools/build-all.sh",
        "build:dev": "cross-env NODE_ENV=development BUILD_TARGET=${BUILD_TARGET:-chrome} sh -c 'yarn clean && yarn run config:dev && yarn build:extension'",
        "build:extension": "NODE_ENV=production webpack --config webpack.config.js && ./tools/manifest-sanitize.sh",
        "build:ff": "cross-env NODE_ENV=production BUILD_TARGET=firefox sh -c 'cat ./src/app/config.ff-release.ts > ./src/app/config.ts && yarn run build:extension'",
        "check-types": "tsc",
        "check-types:watch": "tsc --watch",
        "clean": "rm -rf ./dist/",
        "config": "yarn config:extension --api=https://pass-api.proton.me/api --sso=https://account.proton.me",
        "config:dev": "yarn config:extension --api=https://account.proton.black/api --sso=https://account.proton.black",
        "config:extension": "proton-pack config --no-api-proxy --version=$(cat ./manifest-chrome.json | jq -r .version)",
        "generate:ff-release": "./tools/generate-ff-release.sh",
        "i18n:validate": "proton-i18n validate lint-functions",
        "i18n:validate:context": "proton-i18n extract && proton-i18n validate",
        "postinstall": "yarn run config",
        "install:devtools": "npm install -g @redux-devtools/cli@1.0.7",
        "lint": "eslint src --ext .js,.ts,.tsx --quiet --cache",
        "pretty": "prettier --write  $(find src/app -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx')",
        "start": "yarn clean && yarn config:dev && WEBPACK_DEV_PORT=8090 RESUME_FALLBACK=true ./tools/dev-server.sh",
        "start:prod": "yarn clean && yarn run config && WEBPACK_DEV_PORT=8090 RESUME_FALLBACK=true ./tools/dev-server.sh",
        "start:reload": "RUNTIME_RELOAD=true yarn start",
        "test": "NODE_NO_WARNINGS=1 jest --runInBand --ci --verbose"
    },
    "dependencies": {
        "@proton/atoms": "workspace:^",
        "@proton/polyfill": "workspace:^",
        "@proton/styles": "workspace:^",
        "@redux-devtools/extension": "^3.2.5",
        "formik": "^2.4.3",
        "imask": "^7.1.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-helmet": "^6.1.0",
        "react-redux": "^8.1.2",
        "react-router-dom": "^5.3.4",
        "redux": "^4.2.1",
        "redux-saga": "^1.2.3",
        "tldts": "^6.0.13",
        "ttag": "^1.7.24",
        "webextension-polyfill": "^0.10.0"
    },
    "devDependencies": {
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
        "@proton/i18n": "workspace:packages/i18n",
        "@proton/pack": "workspace:packages/pack",
        "@types/chrome": "^0.0.243",
        "@types/react-helmet": "^6.1.6",
        "@types/webextension-polyfill": "^0.10.1",
        "babel-plugin-transform-require-context": "^0.1.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.46.0",
        "jest": "^29.6.2",
        "prettier": "^2.8.8",
        "remote-redux-devtools": "^0.5.16",
        "typescript": "^5.1.6",
        "webpack": "^5.88.2",
        "webpack-dev-server": "^4.15.1"
    }
}
