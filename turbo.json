{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["APPLICATION", "CI_COMMIT_TAG"],
    "globalPassThroughEnv": [
        "http_proxy",
        "https_proxy",
        "no_proxy",
        "HTTP_PROXY",
        "HTTPS_PROXY",
        "NO_PROXY",
        "WEBPACK_PARALLELISM",
        "CI_COMMIT_SHA",
        "CI_COMMIT_REF_NAME",
        "SENTRY_ORG",
        "SENTRY_URL",
        "SENTRY_AUTH_TOKEN"
    ],
    "tasks": {
        "transit": {
            "dependsOn": ["^transit"]
        },
        "@proton/i18n#build": {},
        "build:web": {
            "outputs": ["dist/**", "webapp-bundle.tar.gz"]
        },
        "test:ci": {
            "dependsOn": ["transit"]
        },
        "test:coverage": {
            "outputs": ["coverage/**"]
        },
        "lint": {},
        "i18n:validate": {},
        "i18n:extract:web": {
            "dependsOn": ["@proton/i18n#build", "build:web"],
            "outputs": ["po/**"]
        },
        "i18n:validate:context:web": {
            "inputs": ["po/**"]
        },
        "check-types": {
            "dependsOn": ["transit"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
